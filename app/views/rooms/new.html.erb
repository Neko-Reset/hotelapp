<div class="room_page">
  <div class="room_main">
  <%= form_with model: @room do |f| %>
    <%= f.label :ルーム名, class: "label" %><br>
    <%= f.text_field :room_name,  placeholder: "ルーム名入力", autofocus: true, autocomplete: "room_name",  class: "input" %><br>
    <%= f.label :ルーム紹介, class: "label" %><br>
    <%= f.text_area :room_memo, placeholder: "ルーム説明入力",autofocus: true, autocomplete: "room_memo",class: "textarea" %><br>
    <%= f.label :料金, class: "label" %><br>
    <%= f.text_field :room_price, placeholder: "１日あたりの料金を入力", autofocus: true, autocomplete: "room_price",class: "input" %><br>
    <%= f.label :住所, class: "label" %><br>
    <%= f.text_field :room_area, placeholder: "住所入力", autofocus: true, autocomplete: "room_area",class: "input" %><br>
    <%= f.label :ルーム画像, class: "label" %><br>
    <%= f.file_field :image %><br>
    <div>
      <%= f.submit "登録" %>
    </div>
    <% end %>
  </div>
</div>
