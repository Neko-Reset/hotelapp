<div class="room_main">
  <h2 class="kensaku">検索結果 :
  <%= Room.where('room_name LIKE ? OR room_area LIKE ? OR room_memo LIKE ?',"%#{params[:search]}%","%#{params[:search]}%","%#{params[:search]}%").count %>
件</h2>
  <div class="row">
  <% @rooms.each do |room| %>
    <div class="room-frame-inner">
      <div class="room-image-out">
      <% if room.image.attached? %>
        <%= image_tag room.image, class: "image" %>
      <% end %>
      </div>
      <div class="room-profile">
        <p class="room-profile-name"><%= room.room_name %></p>
        <p class="room-profile-city"><%= room.room_area %><%= link_to "確認", room %></p>
        <p class="room-profile-price price-icon"><%= room.room_price %></p>
        <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </div>
      <% end  %>
    </div>
  </div>
</div>
