<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <% if @room.image.attached? %>
        <%= image_tag @room.image, class: "image_show" %>
      <% end %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon"></div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"></p><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.room_area %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.room_memo %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.room_price %>円</h5>
        <div class="room-show-date-select">
          <%= form_with url: new_hotel_path , method: :get do |f| %>
            <%= f.hidden_field :room_id,value: "#{params[:id]}"%>
            <%= f.label :start_day ,"開始日" %>
            <%= f.date_field :start_day %><br>
            <%= f.label :end_day ,"終了日" %>
            <%= f.date_field :end_day %><br>
            <%= f.label :number ,"人数" %>
            <%= f.number_field :number %><br>
            <%= f.submit "予約する"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
