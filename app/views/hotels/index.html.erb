<h3>予約済みルーム一覧</h3>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>開始日</th>
        <th>終了日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.image.attached? %><%= image_tag room.image, class: "image" %>
            <% end %>
          </td>
          <td>
            <%= room.room_name %><br>
            <%= link_to "確認", room %>
          </td>
          <td><%= room.room_memo %></td>
        <%end%>
        <% @hotels.each do |hotel| %>
          <td><%= hotel.total_price %></td>
          <td><%= hotel.start_day%></td>
          <td><%= hotel.end_day %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
